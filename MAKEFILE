all:
	TASM.EXE /ml VGA.ASM
	TCC.EXE -c -oVGAC.OBJ VGA.C
	TCC.EXE -c -oRENDERER.OBJ RENDERER.C
	TCC.EXE -c -oKEYBRD.OBJ KEYBRD.C
	TCC.EXE -c -oCELL.OBJ CELL.C
	TCC.EXE DOSLIFE.C VGA.OBJ VGAC.OBJ RENDERER.OBJ KEYBRD.OBJ CELL.OBJ
clean:
	DEL DOSLIFE.EXE
	DEL DOSLIFE.OBJ
	DEL VGA.OBJ
	DEL VGAC.OBJ
	DEL RENDERER.OBJ
	DEL KEYBRD.OBJ
	DEL CELL.OBJ
